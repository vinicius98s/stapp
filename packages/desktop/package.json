{
  "name": "@stapp/desktop2",
  "version": "0.0.1",
  "private": true,
  "productName": "Stapp",
  "main": "electron/main.ts",
  "homepage": "./",
  "license": "MIT",
  "build": {
    "files": [
      "build/**/*",
      "../../node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "stapp",
      "owner": "vinicius98s"
    }
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@chakra-ui/core": "^0.8.0",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "apollo-boost": "^0.4.9",
    "emotion-theming": "^10.0.27",
    "graphql": "^15.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0"
  },
  "scripts": {
    "start": "concurrently \"yarn start:client\" \"yarn start:electron\"",
    "build:client": "webpack --mode production",
    "start:client": "webpack-dev-server --mode development",
    "start:electron": "export ELECTRON_START_URL=http://localhost:3000 && electron .",
    "build:electron": "tsc electron/*.ts --outDir build/electron",
    "package": "electron-builder build --mac --win -c.electronVersion=9.0.4 -c.extraMetadata.main=build/electron/main.js --publish never"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/polyfill": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@types/react": "^16.9.38",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "babel-loader": "^8.1.0",
    "eslint": "^7.3.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.0",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
